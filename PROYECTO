CREATE TABLE PRODUCTO(
ID_PRODUCTO INTEGER,
NOMBRE VARCHAR2(180),
COSTO FLOAT);

CREATE OR REPLACE PROCEDURE GUARDAR_PRODUCTO(
MY_ID IN INTEGER,
MY_NOMBRE IN VARCHAR2,
MY_COSTO IN FLOAT)
AS
BEGIN
INSERT INTO PRODUCTO VALUES(
MY_ID,
MY_NOMBRE,
MY_COSTO);
END;
/

CREATE OR REPLACE TRIGGER DISPARADOR_PRODUCTO BEFORE INSERT ON PRODUCTO
FOR EACH ROW
BEGIN
IF :NEW.COSTO<0 THEN
RAISE_APPLICATION_ERROR(-20001, 'NO PUEDES INTRODUCIR COSTOS MENORES Q CERO');
END IF;
END;
/

CREATE OR REPLACE PROCEDURE actualizar_producto_nombre (
my_nombre IN VARCHAR2,
my_costo IN FLOAT)
AS
BEGIN
UPDATE PRODUCTO SET COSTO = my_costo WHERE NOMBRE = my_nombre;
end;
/

SELECT * FROM PRODUCTO;
